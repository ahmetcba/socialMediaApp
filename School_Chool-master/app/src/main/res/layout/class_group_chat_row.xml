<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="5dp"
    app:cardBackgroundColor="#ffffff"
    app:cardCornerRadius="5dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:textColor="@color/colorDarkBlue"
            android:layout_gravity="bottom"
            android:gravity="top"
            android:textSize="12sp"

            android:id="@+id/nickname_row"
            android:text="Random text"
            android:paddingLeft="5dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:orientation="horizontal"
            android:id="@+id/l1Message">

            <TextView
                android:visibility="gone"
                android:layout_width="4dp"
                android:layout_height="20dp"
                android:background="#6100C1"
                android:layout_gravity="center"
                android:id="@+id/line_row"/>
            <TextView
                android:id="@+id/message_row"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"

                android:padding="5dp"
                android:text="Random text"
                android:textColor="#000000"
                android:textSize="12sp"
                android:layout_marginLeft="8dp"/>

            <ImageView
                android:visibility="gone"
                android:layout_marginTop="1dp"
                android:padding="7dp"
                android:src="@drawable/ic_baseline_image_24"
                android:layout_width="45dp"
                android:layout_height="39dp"
                android:tint="@color/purple"
                android:id="@+id/message_img_row"
                android:layout_gravity="center"/>



            <ImageView
                android:padding="7dp"
                android:layout_width="45dp"
                android:layout_height="39dp"
                android:tint="@color/colorUstMenu"
                android:src="@drawable/ic_baseline_thumb_up_24"
                android:id="@+id/messageLike_row"
                android:layout_gravity="center"/>



            <TextView
                android:textAlignment="center"
                android:layout_width="30dp"
                android:layout_height="20dp"
                android:textColor="#000"
                android:textSize="13sp"
                android:id="@+id/likeCounter_row"
                android:layout_gravity="center"
                android:text="0"

                />


        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Reply ->"
            android:gravity="right"
            android:layout_marginRight="10dp"
            android:visibility="visible"
            android:id="@+id/rep_class"
            />


    </LinearLayout>


</androidx.cardview.widget.CardView>