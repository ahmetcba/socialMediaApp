<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".Activities.ClassChatGroupActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/cgc_recyclerview"
        android:layout_above="@id/opened_menu_cgc"
        tools:listitem="@layout/class_group_chat_row"
        />

    <LinearLayout
        android:id="@+id/cgc_linear"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="#e2e2e2"
        android:weightSum="10"
        >

        <EditText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:hint="Write"
            android:paddingStart="10dp"
            android:background="@drawable/msg_edit_background"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginStart="5dp"
            android:id="@+id/msgEdit_cgc"
            />

        <ImageView
            android:tint="@color/colorCoolBlue"
            android:id="@+id/select_img_cgc"
            android:padding="5dp"
            android:src="@drawable/ic_baseline_add_a_photo_24"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.2"
            />
        <ImageView
            android:tint="@color/colorDarkBlue"
            android:id="@+id/send_msg_cgc"
            android:padding="5dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.2"
            android:src="@drawable/ic_baseline_send_24"
            />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            />

        <ImageView
            android:tint="@color/colorAccent"
            android:id="@+id/lesson_cgc"
            android:src="@drawable/ic_baseline_lens_24"
            android:padding="5dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.2"
            />
        <ImageView
            android:tint="@color/black"
            android:id="@+id/menu_cgc"
            android:src="@drawable/ic_baseline_more_vert_24"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.9"
            />

        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:id="@+id/opened_menu_cgc"
        android:layout_above="@id/cgc_linear"
        android:visibility="gone"
        android:weightSum="5"
        >
        <de.hdodenhof.circleimageview.CircleImageView
            app:civ_border_color="@color/black"
            app:civ_border_width="1dp"
            android:padding="10dp"
            android:id="@+id/profile_menu_cgc"
            android:tint="@color/black"
            android:src="@drawable/ic_baseline_person_24"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            />
        <de.hdodenhof.circleimageview.CircleImageView
            android:padding="10dp"
            app:civ_border_width="1dp"
            android:id="@+id/schoolChat_menu_cgc"
            android:tint="@color/black"
            android:src="@drawable/ic_baseline_school_24"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            />
        <de.hdodenhof.circleimageview.CircleImageView
            android:padding="10dp"
            app:civ_border_width="1dp"
            android:id="@+id/classInfo_menu_cgc"
            android:tint="@color/black"
            android:src="@drawable/ic_baseline_info_24"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            />
        <de.hdodenhof.circleimageview.CircleImageView
            android:padding="10dp"
            app:civ_border_width="1dp"
            android:id="@+id/notes_menu_cgc"
            android:tint="@color/black"
            android:src="@drawable/ic_baseline_notes_24"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            />
        <de.hdodenhof.circleimageview.CircleImageView
            android:padding="10dp"
            app:civ_border_width="1dp"
            android:id="@+id/questions_menu_cgc"
            android:tint="@color/black"
            android:src="@drawable/ic_baseline_question_answer_24"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            />

    </LinearLayout>


</RelativeLayout>