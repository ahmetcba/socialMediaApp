<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.AddWorkBookActivity">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:textSize="20dp"
        android:hint="Title"
        android:singleLine="true"
        android:textColor="@color/black"
        android:id="@+id/title_workbook"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/title_workbook"
        android:hint="Write Content"
        android:padding="15dp"
        android:gravity="left|top"
        android:id="@+id/content_workbook"
        android:backgroundTint="#ffffff"
        android:textColor="@color/black"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/colorCoolBlue"
        android:text="Add"
        android:textColor="#ffffff"
        android:id="@+id/add_workbook"
        />


</RelativeLayout>