<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorThinBlue"
    tools:context=".Activities.ImageMessageActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="100dp"
        android:layout_above="@+id/msg_imgmsg"
        android:src="@drawable/add_photo"
        android:id="@+id/imgview_imgmsg"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="@drawable/msg_edit_background"
        android:layout_alignParentBottom="true"
        android:id="@+id/msg_imgmsg"
        android:layout_marginBottom="50dp"
        android:layout_toStartOf="@id/send_imgmsg"
        android:padding="10dp"
        android:hint="Write"
        android:textColorHint="#070707"
        />

    <ImageButton
        android:src="@drawable/ic_baseline_send_24"
        android:tint="@color/black"
        android:layout_width="70dp"
        android:layout_height="65dp"
        android:background="@drawable/msg_edit_background"
        android:layout_alignParentBottom="true"
        android:id="@+id/send_imgmsg"
        android:layout_marginBottom="50dp"
        android:layout_alignParentRight="true"
        />





</RelativeLayout>