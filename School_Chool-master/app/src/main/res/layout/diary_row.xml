<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="10dp"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    android:layout_marginBottom="5dp"
    app:cardElevation="4dp"
    >
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <TextView
        android:id="@+id/timestamp_row_diary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Title"
        android:textStyle="bold"
        android:textSize="13sp"
        android:padding="10dp"
        android:maxLines="1"
        android:layout_marginEnd="30dp"
        />
    <TextView
        android:id="@+id/title_row_diary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Title"
        android:textSize="13sp"
        android:padding="5dp"
        android:maxLines="1"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="10dp"
        android:layout_below="@+id/timestamp_row_diary"
        />

    <ImageView
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/star_unfilled"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:padding="8dp"
        android:id="@+id/add_to_fvrt_row_diary"
        />

    <ImageView
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/star_filled"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:visibility="gone"
        android:padding="8dp"
        android:id="@+id/del_from_fvrt_row_diary"
        />




</RelativeLayout>
</androidx.cardview.widget.CardView>