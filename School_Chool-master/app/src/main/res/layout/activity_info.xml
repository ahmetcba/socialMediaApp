<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activities.InfoActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="Invite Friend ->"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:id="@+id/invite_info"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="Vote Someone to Kick ->"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:id="@+id/kick_vote_info"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="School No. 1"
        android:textColor="@color/colorCoolBlue"
        android:layout_marginStart="20dp"
        android:layout_marginTop="25dp"
        android:id="@+id/school_num_info"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:text="37 Students"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:id="@+id/strength_info"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="20dp"
        android:id="@+id/recyclerview_info"
        />



</LinearLayout>